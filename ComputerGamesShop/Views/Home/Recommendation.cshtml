
@{
    ViewData["Title"] = "Recommendation";
}
<div style="margin-top: 15px; margin-bottom:25px;">
    <h2 style="text-align: center; color:orange;">Our Recommendation</h2>
</div>
<div style="display:flex; justify-content: center;">
    <aside>
        <h4 style="text-align: center;">Fifa 2018</h4>
        <br />
        <video id="video" width="600" style="border-radius:15px; cursor: pointer;" onclick="playPause()">
            <source src="~/video/fifa18.mp4" type="video/mp4">
            Your browser does not support HTML5 video.
        </video>
    </aside>
</div>

<script>
    var myVideo = document.getElementById("video"); 
    function playPause() {
        if (myVideo.paused)
            myVideo.play();
        else
            myVideo.pause(); 
    }
</script>