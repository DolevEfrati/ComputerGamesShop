@model IEnumerable<ComputerGamesShop.Models.Publisher>

@{
    ViewData["Title"] = "Publishers";
}
<div class="container-publishers">
    <div class="col-md-6" style="margin: auto;">
        <form class="form-inline" style="min-height:80px;">
            <input class="form-control" onkeyup="filterPublishers()" id="publisherNameSearch"
                   type="text" placeholder="Search..." style="width: 95%; margin: auto;">
        </form>
    </div>
    <ul id="publishers-list" class="publishers-result-list col-md-6 column-in-center" style="list-style-type: none; margin: auto;">
        @foreach (var publisher in Model)
        {
            <li class="row" style="margin-bottom:2%;">
                <div class="col-md-3 publisher-image">
                    <img src="@publisher.Image" style="width:80%; vertical-align: middle; border-radius: 8px;" />
                </div>
                <div class="col-md-4 publisher-name" style="height:120px">
                    <h4 class="name-string">
                        @publisher.Name
                    </h4>
                    <h6>Specialty: @publisher.Specialty</h6>
                    <h6 style="color:black;">Since @publisher.FoundedDate.Year</h6>
                </div>
                <div class="col-md-4" style="display: flex; align-items:center;">
                    @if (Globals.isManagerConnected(Context.Session))
                    {
                        <button class="btn" type="submit" form="remove-publisher-btn" value="@publisher.ID" style="margin-right:5px; width:20%; flex:1; background-color:#ff3333;">delete</button>
                        <button class="btn" type="submit" form="edit-publisher-btn" value="@publisher.ID" style="width:20%; flex:1; background-color:#c9c7c5;">edit</button>
                    }
                </div>
            </li>
        }
    </ul>
</div>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/publisher.js"></script>
<link rel="stylesheet" href="~/css/publishers.css" />
<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />